<?xml version="1.0"?>
<robot name="rover" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <material name="grey">
    <color rgba="0.4 0.4 0.4 1" />
  </material>
  <material name="pink">
    <color rgba="0.60 0.27 0.3 1" />
  </material>

  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="package://rover_sim/meshes/base_link.stl" />
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://rover_sim/meshes/base_link.stl" />
      </geometry>
    </collision>
    <inertial>
      <origin xyz="-0.20184 -0.000146 0.032825" rpy="0 0 0" />
      <mass value="28.648383719388" />
      <inertia ixx="0.044964" ixy="0.0" ixz="0.0"
             iyy="0.239861" iyz="0.0"
             izz="0.251238"/>
    </inertial>
  </link>

  <link name="left_front">
    <visual>
      <geometry>
        <mesh filename="package://rover_sim/meshes/left_front.stl" />
      </geometry>
      <material name="pink"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://rover_sim/meshes/left_front.stl" />
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0.000053 0.04643 -0.000245" rpy="0 0 0" />
      <mass value="1.80318326891779" />
      <inertia ixx="0.0084266" ixy="0.0" ixz="0.0"
             iyy="0.0141488" iyz="0.0"
             izz="0.0084275"/>
    </inertial>
  </link>
  <joint name="left_front_joint" type="continuous">
    <parent link="base_link" />
    <child link="left_front" />
    <origin xyz="0.3682 0.38012 -0.16177" rpy="0 0 0" />
    <axis xyz="0 1 0" />
  </joint>

  <link name="right_front">
    <visual>
      <geometry>
        <mesh filename="package://rover_sim/meshes/right_front.stl" />
      </geometry>
      <material name="pink"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://rover_sim/meshes/right_front.stl" />
      </geometry>
    </collision>
    <inertial>
      <origin xyz="-0.000053 -0.04643 -0.000245" rpy="0 0 0" />
      <mass value="1.80318325796502" />
      <inertia ixx="0.00841975" ixy="0.0" ixz="0.0"
             iyy="0.01414883" iyz="0.0"
             izz="0.00843434"/>
    </inertial>
  </link>
  <joint name="right_front_joint" type="continuous">
    <parent link="base_link" />
    <child link="right_front" />
    <origin xyz="0.3682 -0.37989 -0.16177" rpy="0 0 0" />
    <axis xyz="0 1 0" />
  </joint>

  <link name="left_back">
    <visual>
      <geometry>
        <mesh filename="package://rover_sim/meshes/left_back.stl" />
      </geometry>
      <material name="pink"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://rover_sim/meshes/left_back.stl" />
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0.000053 0.04643 -0.000245" rpy="0 0 0" />
      <mass value="1.80318324865192" />
      <inertia ixx="0.00841984" ixy="0.0" ixz="0.0"
             iyy="0.0141488" iyz="0.0"
             izz="0.00843426"/>
    </inertial>
  </link>
  <joint name="left_back_joint" type="continuous">
    <parent link="base_link" />
    <child link="left_back" />
    <origin xyz="-0.36808 0.37966 -0.16184" rpy="0 0 0" />
    <axis xyz="0 1 0" />
  </joint>

  <link name="right_back">
    <visual>
      <geometry>
        <mesh filename="package://rover_sim/meshes/right_back.stl" />
      </geometry>
      <material name="pink"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://rover_sim/meshes/right_back.stl" />
      </geometry>
    </collision>
    <inertial>
      <origin xyz="-0.000053 -0.04643 -0.000245" rpy="0 0 0" />
      <mass value="1.80318324711134" />
      <inertia ixx="0.00841984" ixy="0.0" ixz="0.0"
             iyy="0.01414883" iyz="0.0"
             izz="0.00843426"/>
    </inertial>
  </link>
  <joint name="right_back_joint" type="continuous">
    <parent link="base_link" />
    <child link="right_back" />
    <origin xyz="-0.36808 -0.3807 -0.16164" rpy="0 0 0" />
    <axis xyz="0 1 0" />
  </joint>

  <link name="lidar">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://rover_sim/meshes/lidar.stl" />
      </geometry>
      <material name="pink" />
    </visual>
  </link>
  <joint name='lidar_joint' type='fixed'>
    <parent link="base_link"/>
    <child link="lidar"/>
    <origin xyz="0.2 0 0.20682" rpy="0 0 0"/>
  </joint>
  
  <gazebo reference="lidar">
    <sensor type="ray" name="laser">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>10</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>1024</samples>
            <resolution>1</resolution>
            <min_angle>-3.141593</min_angle>
            <max_angle>3.141593</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.1</min>
          <max>2</max>
          <resolution>0.1</resolution>
        </range>
      </ray>
      <plugin name="gazebo_ros_laser" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <namespace>/rover</namespace>
          <remapping>~/out:=scan</remapping>
        </ros>
        <output_type>sensor_msgs/LaserScan</output_type>
        <frame_name>lidar</frame_name>
      </plugin>
    </sensor>
  </gazebo>
  <gazebo>
    <plugin name="rover_joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
      <ros>
        <namespace>/rover</namespace>
      </ros>
      <update_rate>50</update_rate>
      <joint_name>left_front_joint</joint_name>
      <joint_name>left_back_joint</joint_name>
      <joint_name>right_front_joint</joint_name>
      <joint_name>right_back_joint</joint_name>
    </plugin>
  </gazebo>
  <gazebo>
    <plugin name='skid_steer_drive' filename='libgazebo_ros_diff_drive.so'>
      <ros>
        <namespace>/rover</namespace>
      </ros>

      <num_wheel_pairs>2</num_wheel_pairs>
      <update_rate>30</update_rate>

      <!-- wheels -->
      <left_joint>left_front_joint</left_joint>
      <right_joint>right_front_joint</right_joint>
      <left_joint>left_back_joint</left_joint>
      <right_joint>right_back_joint</right_joint>

      <!-- kinematics -->
      <wheel_separation>0.76</wheel_separation>
      <wheel_separation>0.76</wheel_separation>
      <wheel_diameter>0.11</wheel_diameter>
      <wheel_diameter>0.11</wheel_diameter>

      <!-- limits -->
      <max_wheel_torque>20</max_wheel_torque>
      <max_wheel_acceleration>1.0</max_wheel_acceleration>

      <!-- output -->
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>true</publish_wheel_tf>

      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_link</robot_base_frame>
    </plugin>
  </gazebo>
</robot>
